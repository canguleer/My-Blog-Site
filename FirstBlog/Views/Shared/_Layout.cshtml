
@using FirstBlog.Models;


<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="blog,resposive,sailor,bootstrap4,modern,html,html5,personal blog,agency blog,video,grid,Clean">
	<meta name="author" content="Dreambuzz">
	<link rel="icon" href="~/Content/assets/images/favicon.ico">
	<title>Sailor-Responsive html5 Blog Theme</title>

	<!-- Bootstrap core CSS -->
	<link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<!--  Icon Font stylesheet  -->
	<link href="~/Content/assets/css/icofont.css" rel="stylesheet">
	<link href="~/Content/assets/css/font-awesome.css" rel="stylesheet">

	<!--   Common stylesheet  -->
	<link href="~/Content/assets/css/style.css" rel="stylesheet">
	<!--   Custom stylesheet  -->
	<link href="~/Content/assets/css/blog.css" rel="stylesheet">
	<!--   Responsive stylesheet  -->
	<link href="~/Content/assets/css/responsive.css" rel="stylesheet">

</head>
<body>
	<header class="blog-header">
		<img />
		<!--     Main Menu  -->
		<nav class="navbar navbar-expand-lg  center-navigation shadow-lg bg-white" id="center-navigation">
			<div class="container">
				<a class="navbar-brand" href="#"><img class="logo-dark d-sm-block d-lg-none " src="~/Content/assets/images/logo.png" alt="Logo-side"></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"><i class="icofont icofont-navigation-menu"></i> </span>
				</button>
				<div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link page-scroll " href="@Url.Action("Index","Home")">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link page-scroll " href="@Url.Action("Hakkımda","Home")">Hakkımda</a>
                        </li>







                        <li class="nav-item">
                            <a class="nav-link page-scroll header-logo d-none d-lg-block" href="@Url.Action("Index","Home")"><img src="~/Content/assets/images/blog/depositphotos_106357936-stock-illustration-letter-m-logo-icon-design.jpg" style="width:100px;" alt="Logo" class="img-fluid"></a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown4" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                KATEGORİLER
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown4">



                                @{
                                    List<Kategori> kategoriler = null;

                                    BloggEntities db = new BloggEntities();
                                    kategoriler = db.Kategori.ToList();

                                }

                                <ul>
                                    @foreach (var item in kategoriler)
                                    {
                                        <li>
                                            <a class="dropdown-item" link href="/KategoriListeleme/Index/@item.KategoriId"> @item.KategoriAdi (@item.Makale.Count())</a>
                                        </li>
                                    }


                                </ul>





                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link page-scroll " href="@Url.Action("Iletisim","Home")">İLETİŞİM</a>
                        </li>

                    </ul>
				</div>
			</div>
		</nav>
	</header>




	@RenderBody()
	<footer class="blog-footer">
		<div class="footer-social">
			<a href="#" target="_blank" class="fa fa-facebook"></a>
			<a href="#" target="_blank" class="fa fa-twitter"></a>
			<a href="#" target="_blank" class="fa fa-linkedin"></a>
			<a href="#" target="_blank" class="fa fa-google-plus"></a>
			<a href="#" target="_blank" class="fa fa-instagram"></a>

		</div>
		<p>Bu sitenin tüm hakları Can Güler tarafından saklıdır.</p>
		<p>2018.Copyright Reserved for <a href="#">Personal</a> by <a href="#">Can güler</a>.</p>
		<p>
			<a href="#">Üste Geri Dön</a>
		</p>
	</footer>
	<!-- Bootstrap core JavaScript
	================================================== -->
	<script src="~/Content/assets/js/jquery-3.3.1.slim.min.js"></script>
	<script src="~/Content/assets/js/popper.min.js"></script>
	<script src="~/Content/assets/js/slick.js"></script>
	<script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
	<script src="~/Content/assets/js/jquery.migrate.js"></script>
	<script src="~/Content/assets/js/custom.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

	@RenderSection("scripts", required: false)



</body>
</html>
