@model FirstBlog.Models.Yorum

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
	<h2>Yeni Yorum</h2>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

	<div class="form-horizontal">

		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(model => model.MakaleId, "Makale Adı", htmlAttributes: new { @class = "control-label col-md-2" })

			<div class="col-md-10">
				@Html.DropDownList("MakaleId", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.MakaleId, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Icerik, "İçerik", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.UyeId, "Üye Adı", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("UyeId", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.UyeId, "", new { @class = "text-danger" })
			</div>
		</div>



		<div class="form-group">
			@Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
				@Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
	}

	<div>
		@Html.ActionLink("Back to List", "Index")
	</div>
</div>